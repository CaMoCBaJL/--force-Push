@inject MySiteServer.Data.Repository.IRepository repository;



@page "/goods"
<h3>Goods</h3>
    @foreach (var item in goods)
    {
        <tbody>
            <tr>
                <td>
                    <div>
                        <p>
                            Айди - @item.GoodId, Товар - @item.GoodName, Цена - @item.GoodPrice, Производитель - @item.GoodProducerId, Кол-во на складе - @item.GoodStackAmount
                            <h1><img src=@item.PathToGoodPicture /> </h1>
                        </p>
                    </div>
                </td>
            </tr>
        </tbody>
    }


    @code {
        private IEnumerable<Good> goods = new List<Good>();

        protected override void OnInitialized()
        {
            goods = repository.GetAllGoods();   
        }


    }
